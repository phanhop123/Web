@using Microsoft.AspNetCore.Http

@{
    var username = Context.Session.GetString("Name");
    var avata = Context.Session.GetString("Avata");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FPT Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/homepage.css">
    <link rel="stylesheet" href="~/bootstrap/dist/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="~/bootstrap/dist/js/bootstrap.min.js">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</head>
<body>
    <div class="container-fluid p-0">
        <header class="p-3 mb-3 border-bottom">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                        <li><a asp-action="Index" class="nav-link px-2 link-dark">Home</a></li>
                        <li><a asp-action="Detailcourse" class="nav-link px-2 link-dark">Detailcourse</a></li>
                    </ul>

                    <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                        <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
                    </form>
                    <div class="dropdown text-end">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser"
                           data-bs-toggle="dropdown" aria-expanded="false" onclick="toggleDropdown()">
                           
                            @if (!string.IsNullOrEmpty(avata))
                            {

                                <img src="~/Hinh/Filenopbt/@avata" alt="img" width="32" height="32" class="rounded-circle " />
                              
                            }
                            else
                            {
                                <img src="~/assets/img/avatars/1.png" alt="img" width="32" height="32" class=" rounded-circle " />
                                
                            }
                        </a>
                        <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser" id="dropdownMenu">
                            <li><a class="dropdown-item" asp-controller="User" asp-action="Profile">Profile</a></li>
                            
                            <li> 
                                <hr class="dropdown-divider">
                            </li>     
                            <li><a asp-controller="User" asp-action="DangXuat" class="dropdown-item">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <div class="container content">
            @RenderSection("Sidebar", required: false)
           
            <div class="row justify-content-around">
                <div style="min-height:620px" class="col-4">
                    @RenderBody()
                </div>
              
            </div>
        </div>

        <div class="container footer">
            <footer class="py-5 my-4 ">
                <p class="text-center ">&copy; FPT Polytechnic International</p>
                <p class="text-center ">Contact: Phone number goes here</p>
                <p class="text-center">Address: Address goes here</p>

            </footer>
        </div>
        </div>
    <script>
        function toggleDropdown() {
            var dropdownMenu = document.getElementById("dropdownMenu");
            dropdownMenu.classList.toggle("show");
        }
    </script>
    <script src="/docs/5.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
</body>
</html>
