@model IEnumerable<BusinessObject.Data.Teacher_Class>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_LayoutStudentandTeacher";
}
 @section Sidebar {
                <div class="row col-md-12">
                    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                                    aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                                    aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                                    aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/Hinh/Logo/sl1.jpg" class="d-block w-100" alt="...">

                            </div>
                            <div class="carousel-item">
                                <img src="~/Hinh/Logo/sl3.png" class="d-block w-100" alt="...">

                            </div>
                            <div class="carousel-item">
                                <img src="~/Hinh/Logo/sl4.png" class="d-block w-100" alt="...">

                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                                data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                                data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                </div>
            }
            
   
<table class="table">
    <thead thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Class_Role)
            </th scope="col">
            <th>
                @Html.DisplayNameFor(model => model.Teacher_Course)
            </th scope="col">
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Class_Role.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher_Course.Fullname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Study_Class_id">Edit</a> |
                <a asp-action="Detailcourse" asp-route-id="@item.Teacher_Course_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Study_Class_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
