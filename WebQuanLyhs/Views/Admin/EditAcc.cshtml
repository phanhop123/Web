@model BusinessObject.Data.User

@{
    ViewData["Title"] = "Edit Account";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Account management /</span> Edit Account</h4>

<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Add User</h5>
            </div>
            <div class="card-body">
                <form asp-action="EditAcc">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="User_id" />

                    <div class="row mb-3 form-group">
                        <label class="col-sm-2 col-form-label" asp-for="Fullname">Full name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Fullname">
                        </div>
                        <span asp-validation-for="Fullname" class="text-danger"></span>
                    </div>

                    <div class="row mb-3 form-group">
                        <label class="col-sm-2 col-form-label" asp-for="Email">Email</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <input type="text" asp-for="Email" class="form-control" placeholder="john.doe">
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="row mb-3 form-group">
                        <label class="col-sm-2 col-form-label" asp-for="Password">Password</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Password">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="row mb-3 form-group">
                        <label asp-for="Role" class="form-label control-label">Default select</label>

                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.Role_id, ViewBag.PhanLoaiSVList as SelectList, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Role_id, "", new { @class = "text-danger" })
                        </div>
                        <span asp-validation-for="Role" class="text-danger"></span>


                    </div>

                    <div class="row justify-content-end form-group">
                        <div class="col-sm-10">
                            <input type="submit" value="Save" class="btn btn-outline-success" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
    <div class="d-flex justify-content-end">
        <a class="btn btn-danger ml-auto" asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
