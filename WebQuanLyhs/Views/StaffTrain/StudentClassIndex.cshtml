@model IEnumerable<BusinessObject.Data.Student_Class>

@{
    ViewData["Title"] = "StudentClassIndex";
}

<h1>StudentClassIndex</h1>

<p>
    <a asp-action="AddStudentClass">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class_Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student_Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Class_Role.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student_Course.Fullname)
                </td>
            <td>
                    <a asp-action="EditStudentClass" asp-route-id="@item.Student_Class_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Student_Class_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Student_Class_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
