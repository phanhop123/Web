@model BusinessObject.Data.Category_Course

@{
    ViewData["Title"] = "EditCategory";
}
@{
    Layout = "_LayoutStaff";
}


<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Course catalog management /</span> Edit Category</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category_coures_id" />
            <div class="form-group">
                <label asp-for="Category_name" class="control-label"></label>
                <input asp-for="Category_name" class="form-control" />
                <span asp-validation-for="Category_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category_description" class="control-label"></label>
                <input asp-for="Category_description" class="form-control" />
                <span asp-validation-for="Category_description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

